# User Journey Pipeline - Environment Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# Confluent Cloud Kafka
# ============================================
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.region.aws.confluent.cloud:9092
KAFKA_API_KEY=your_kafka_api_key
KAFKA_API_SECRET=your_kafka_api_secret
KAFKA_TOPIC=user_events

# ============================================
# AWS Bedrock (Claude Haiku 4.5)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# ============================================
# OpenAI (GPT-5-nano)
# ============================================
OPENAI_API_KEY=your_openai_api_key

# ============================================
# User Configuration
# ============================================
# Timezone offset from UTC (for report charts)
# Examples: -8 (PST), -7 (MST), -6 (CST), -5 (EST)
USER_TIMEZONE_OFFSET=-7
